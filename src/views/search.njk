---
layout: 'base.njk'
permalink: '/search/'
title: 'Поиск'
---
{% from "blocks/header.njk" import header, divider %}
{% from "blocks/footer.njk" import footer with context %}
{% from "blocks/logo.njk" import logo %}
{% from "blocks/logo-rudolf.njk" import logoRudolf %}

{% set isLogoContrastColor = hasCategory %}

<div class="search-page">
  <header class="header search-page__header">
    <div class="header__inner header__inner--main font-theme font-theme--code search-page__header-inner">
      <div class="header__logo search-page__logo">
{#        {{ logo(isLink=true, isContrastColor=isLogoContrastColor) }}#}
        {{ logoRudolf(isLink=true, isContrastColor=isLogoContrastColor) }}
        {{ divider() }}
      </div>

      <div class="search-page__search">
        {% include "blocks/search.njk" %}
      </div>

      <div class="header__toggle search-page__toggle">
        <button class="menu-toggle" type="reset" form="search-form" title="Очистить фильтры">
          <span class="visually-hidden">Очистить фильтры</span>
          <span class="menu-toggle__inner menu-toggle__inner--close">
            <kbd class="hotkey font-theme font-theme--code">esc</kbd>
            <svg class="menu-toggle__icon menu-toggle__icon--close" width="45" height="45" viewBox="0 0 45 45">
              <circle cx="22.5" cy="22.5" r="22.5" fill="var(--color-text)" />
              <path fill="var(--color-background)" d="M30.3 32.1c-.5 0-1-.2-1.4-.6l-6.5-6.6-6.5 6.5c-.5.5-1 .7-1.5.7-.4 0-.8-.1-1-.4-.3-.3-.5-.6-.5-1 0-.6.3-1.1.7-1.6l6.5-6.5-6.5-6.4c-.4-.5-.7-1-.7-1.5s.2-.8.4-1.1c.3-.3.7-.4 1.1-.4.5 0 1 .2 1.5.7l6.5 6.5 6.5-6.6c.5-.5 1-.7 1.5-.7.3 0 .7.2 1 .5.3.4.5.8.5 1.1 0 .5-.2 1-.7 1.4l-6.5 6.5 6.5 6.6c.5.5.7 1 .7 1.4 0 .4-.1.7-.5 1-.4.4-.7.5-1 .5z"/>
            </svg>
          </span>
        </button>
      </div>
    </div>
  </header>

  <aside class="search-page__aside">
    <div class="search-page__aside-inner">
      {% include "blocks/search-category.njk" %}

      <div class="search-page__algolia">
        <a class="algolia-block" href="https://www.algolia.com/" target="_blank" rel="noopener noreferrer">
          <span class="algolia-block__text">Поиск работает с помощью</span>
          <img class="algolia-block__image" src="/images/algolia-logo.svg" alt="Логотип Algolia">
        </a>
      </div>

      {% include "blocks/search-tags.njk" %}
    </div>

    <button class="search-page__aside-button" type="button">
      <span class="visually-hidden">Показать/скрыть фильтр</span>
      <div class="search-page__aside-icon-wrapper" aria-hidden="true">
        <svg class="search-page__aside-icon search-page__aside-icon--close" width="48" height="48" fill="currentColor" viewBox="0 0 48 48">
          <path d="M31.27 32.88l-7.3-7.3-7.24 7.24c-.43.43-.8.58-1.15.58a.94.94 0 01-.71-.26.94.94 0 01-.27-.72c0-.34.15-.72.58-1.15l7.24-7.24-7.24-7.23c-.43-.43-.58-.81-.58-1.16 0-.32.1-.54.27-.7a.94.94 0 01.7-.28c.35 0 .73.16 1.16.59l7.24 7.23 7.3-7.3c.44-.44.8-.58 1.09-.58.15 0 .36.07.62.37.28.3.36.55.36.73 0 .3-.14.65-.52 1.03l-7.3 7.3 7.3 7.3c.44.44.58.8.58 1.1 0 .15-.07.36-.37.62-.3.27-.55.35-.73.35-.3 0-.65-.13-1.03-.52z" />
        </svg>
        <svg class="search-page__aside-icon search-page__aside-icon--filter" width="48" height="48" viewBox="0 0 48 48" stroke-width="1.3">
          <g stroke="currentColor" stroke-linecap="round" fill="none">
            <path d="M13.65 30.35h21.7" />
            <path d="M13.65 23.35h21.7" />
            <path d="M13.65 16.35h21.7" />
          </g>
          <g fill="#fff" stroke="currentColor">
            <circle cx="24.5" cy="30.5" r="1.85" />
            <circle cx="17.5" cy="23.5" r="1.85" />
            <circle cx="31.5" cy="16.5" r="1.85" />
          </g>
        </svg>
      </div>
    </button>
  </aside>

  <main class="search-page__main">
    {% include "blocks/search-hits.njk" %}
    <div class="search__placeholder">
      Введите что-нибудь в поле для начала поиска
    </div>
  </main>

  {{ footer(class="search-page__footer") }}
</div>
